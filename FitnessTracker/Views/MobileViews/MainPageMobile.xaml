<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tabview="clr-namespace:Syncfusion.Maui.Toolkit.TabView;assembly=Syncfusion.Maui.Toolkit"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Toolkit.Charts;assembly=Syncfusion.Maui.Toolkit"
             xmlns:button="clr-namespace:Syncfusion.Maui.Toolkit.Buttons;assembly=Syncfusion.Maui.Toolkit"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:bottomsheet="clr-namespace:Syncfusion.Maui.Toolkit.BottomSheet;assembly=Syncfusion.Maui.Toolkit"
             xmlns:effects="clr-namespace:Syncfusion.Maui.Toolkit.EffectsView;assembly=Syncfusion.Maui.Toolkit"
             xmlns:popup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             xmlns:inputs="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             xmlns:input="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:otpinput="clr-namespace:Syncfusion.Maui.Toolkit.OtpInput;assembly=Syncfusion.Maui.Toolkit"
             xmlns:local="clr-namespace:FitnessTracker"
             x:Class="FitnessTracker.MainPageMobile"
             NavigationPage.HasNavigationBar="False">
    
    <ContentPage.Resources>
        <Style TargetType="tabview:SfTabItem">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup>
                        <VisualState x:Name="Normal" >
                            <VisualState.Setters>
                                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource FitnessTrackerIconColorLight}, Dark={StaticResource FitnessTrackerIconColorDark}}" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource FitnessTrackerPrimaryBackgroundLight}, Dark={StaticResource FitnessTrackerPrimaryBackgroundDark}}" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="buttonstyle">
            <Setter Property="HeightRequest" Value="44"/>
            <Setter Property="CornerRadius" Value="28"/>
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource FitnessTrackerPrimaryBackgroundLight}, Dark={StaticResource FitnessTrackerPrimaryBackgroundDark}}"/>
            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource FitnessTrackerPrimaryForegroundLight}, Dark={StaticResource FitnessTrackerPrimaryForegroundDark}}"/>
        </Style>
        <Style TargetType='input:SfTextInputLayout' x:Key="inputstyle">
            <Setter Property="ContainerType" Value="Outlined"/>
            <Setter Property="OutlineCornerRadius" Value="8"/>
            <Setter Property="HeightRequest" Value="70"/>
            <Setter Property="Stroke" Value="#C9C6C8"/>
        </Style>
        <Style TargetType="Border" x:Key="comboboxborderstyle">
            <Setter Property="WidthRequest" Value="296"/>
            <Setter Property="HeightRequest" Value="44"/>
            <Setter Property="Stroke" Value="#C9C6C8"/>
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="popup:SfPopup" x:Key="Popupstyle">
            <Setter Property="PopupStyle">
                <Setter.Value>
                    <popup:PopupStyle HasShadow="True" CornerRadius="12"/>
                </Setter.Value>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <Grid>
        <Grid RowDefinitions="60, *" x:Name="home" BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}">
            <!--Title Bar-->
            <Border Grid.Row="0" HeightRequest="60" StrokeThickness="0" VerticalOptions="Center" BackgroundColor="{AppThemeBinding Light={StaticResource FitnessTrackerContentBackgroundAlt1Light}, Dark={StaticResource FitnessTrackerContentBackgroundAlt1Dark}}">
                <Grid ColumnDefinitions="*, *" Padding="8, 8">
                    <HorizontalStackLayout Grid.Column="0" Spacing="16">
                        <Border StrokeThickness="0" WidthRequest="40">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20" />
                            </Border.StrokeShape>
                            <effects:SfEffectsView TouchDownEffects="Ripple">
                                <effects:SfEffectsView.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Hamburger_Tapped" />
                                </effects:SfEffectsView.GestureRecognizers>
                                <Label Text="&#xe7f5;" FontSize="24" FontFamily="MauiSampleFontIcon" VerticalOptions="Center" HorizontalOptions="Center" Style="{StaticResource IconStyle}"/>
                            </effects:SfEffectsView>
                        </Border>
                        <Label x:Name="headerLabel" Grid.Column="1" FontSize="20" FontAttributes="Bold" VerticalOptions="Center" VerticalTextAlignment="Center" HorizontalOptions="Start" Style="{StaticResource HeaderStyle}"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Grid.Column="1" Spacing="16" HorizontalOptions="End">
                        <Border StrokeThickness="0" WidthRequest="40">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20" />
                            </Border.StrokeShape>
                            <effects:SfEffectsView TouchDownEffects="Ripple">
                                <effects:SfEffectsView.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Notification_Tapped" />
                                </effects:SfEffectsView.GestureRecognizers>
                                <Label Text="&#xe75e;" FontSize="24" FontFamily="MauiSampleFontIcon" VerticalOptions="Center" HorizontalOptions="Center" Style="{StaticResource IconStyle}"/>
                            </effects:SfEffectsView>
                        </Border>
                        <Border StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20" />
                            </Border.StrokeShape>
                            <effects:SfEffectsView>
                                <effects:SfEffectsView.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="ProfilePhoto_Tapped" />
                                </effects:SfEffectsView.GestureRecognizers>
                                <Image Source="alexuser.png" Aspect="AspectFit" WidthRequest="40" HeightRequest="40" />
                            </effects:SfEffectsView>
                        </Border>
                    </HorizontalStackLayout>
                </Grid>
            </Border>

            <tabview:SfTabView x:Name="tabview" Grid.Row="1" TabBarPlacement="Bottom" TabBarHeight="60" TabBarBackground="{AppThemeBinding Light={StaticResource FitnessTrackerContentBackgroundAlt1Light}, Dark={StaticResource FitnessTrackerContentBackgroundAlt1Dark}}" Background="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource FitnessTrackerContentBackgroundDark}}" IndicatorStrokeThickness="0" HeaderDisplayMode="Image" TabItemTapped="SfTabView_TabItemTapped">
                <tabview:SfTabView.Items>
                    <tabview:SfTabItem x:Name="homeTab" Header="Home">
                        <tabview:SfTabItem.ImageSource>
                            <FontImageSource Glyph="&#xe738;" FontFamily="MauiSampleFontIcon" Color="{Binding Source={x:Reference homeTab}, Path=TextColor}" />
                        </tabview:SfTabItem.ImageSource>

                        <local:HomePageContentMobile />

                    </tabview:SfTabItem>

                    <tabview:SfTabItem x:Name="activityTab" Header="Activity">
                        <tabview:SfTabItem.ImageSource>
                            <FontImageSource Glyph="&#xe79f;" FontFamily="MauiSampleFontIcon" Color="{Binding Source={x:Reference activityTab}, Path=TextColor}" />
                        </tabview:SfTabItem.ImageSource>

                        <local:ActivityPageContentMobile />

                    </tabview:SfTabItem>

                    <tabview:SfTabItem x:Name="journalTab" Header="Journal">
                        <tabview:SfTabItem.ImageSource>
                            <FontImageSource Glyph="&#xe7b2;" FontFamily="MauiSampleFontIcon" Color="{Binding Source={x:Reference journalTab}, Path=TextColor}" />
                        </tabview:SfTabItem.ImageSource>

                        <local:JournalPageContentMobile />

                    </tabview:SfTabItem>

                    <tabview:SfTabItem x:Name="goalTab" Header="Goal" >
                        <tabview:SfTabItem.ImageSource>
                            <FontImageSource Glyph="&#xe7f4;" FontFamily="MauiSampleFontIcon" Color="{Binding Source={x:Reference goalTab}, Path=TextColor}" />
                        </tabview:SfTabItem.ImageSource>

                        <local:GoalPageContentMobile />

                    </tabview:SfTabItem>

                </tabview:SfTabView.Items>
            </tabview:SfTabView>

            <!--Floating buttons-->
            <button:SfButton x:Name="addButton" Grid.Row="0" Grid.RowSpan="2" Text="&#xe754;" TextColor="{AppThemeBinding Light={StaticResource FitnessTrackerPrimaryForegroundLight}, Dark={StaticResource FitnessTrackerPrimaryForegroundDark}}" FontFamily="MauiSampleFontIcon" FontSize="32" CornerRadius="30" HeightRequest="60" WidthRequest="60" Background="{AppThemeBinding Light={StaticResource FitnessTrackerPrimaryBackgroundLight}, Dark={StaticResource FitnessTrackerPrimaryBackgroundDark}}" Clicked="AddIcon_Clicked" HorizontalOptions="End" VerticalOptions="End" Margin="0, 0, 24, 80" />
            <Grid x:Name="overlayGrid" Grid.Row="0" Grid.RowSpan="2" Background="#000000" Opacity="0.8" IsVisible="False">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OverlayGrid_Tapped" />
                </Grid.GestureRecognizers>
            </Grid>
            <Grid x:Name="floatingButtonGrid" Grid.Row="0" Grid.RowSpan="2" IsVisible="False" HorizontalOptions="End" VerticalOptions="End" Margin="0, 0, 24, 80">
                <VerticalStackLayout Spacing="15">
                    <button:SfButton Text="&#xe73d;" FontSize="18" FontFamily="MauiSampleFontIcon" Background="{AppThemeBinding Light={StaticResource Secondary-bg-colorLight}, Dark={StaticResource Secondary-bg-colorDark}}" TextColor="{AppThemeBinding Light={StaticResource Secondary-text-colorLight}, Dark={StaticResource Secondary-text-colorDark}}" HeightRequest="40" WidthRequest="40" CornerRadius="20" Clicked="AddActivityClicked" />
                    <button:SfButton Text="&#xe778;" FontSize="18" FontFamily="MauiSampleFontIcon" Background="{AppThemeBinding Light={StaticResource Secondary-bg-colorLight}, Dark={StaticResource Secondary-bg-colorDark}}" TextColor="{AppThemeBinding Light={StaticResource Secondary-text-colorLight}, Dark={StaticResource Secondary-text-colorDark}}" HeightRequest="40" WidthRequest="40" CornerRadius="20" Clicked="TrackActivity_Clicked" IsVisible="False" />
                    <button:SfButton Text="&#xe755;" FontSize="32" FontFamily="MauiSampleFontIcon" CornerRadius="30" HeightRequest="60" WidthRequest="60" Background="{AppThemeBinding Light={StaticResource FitnessTrackerPrimaryBackgroundLight}, Dark={StaticResource FitnessTrackerPrimaryBackgroundDark}}" TextColor="{AppThemeBinding Light={StaticResource FitnessTrackerPrimaryForegroundLight}, Dark={StaticResource FitnessTrackerPrimaryForegroundDark}}" Clicked="CloseIcon_Clicked" />
                </VerticalStackLayout>
            </Grid>
        </Grid>

        <!--Settings Page-->
        <Grid x:Name="NavigationDrawerGrid" IsVisible="false" Background="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource FitnessTrackerContentBackgroundDark}}" TranslationX="-390">
            <bottomsheet:SfBottomSheet x:Name="bottomsheet" CornerRadius="16, 16, 0, 0" ContentWidthMode="{OnIdiom Phone=Full, Desktop=Custom}" BottomSheetContentWidth="400" ShowGrabber="True" Background="{AppThemeBinding Light={StaticResource FitnessTrackerContentBackgroundAlt1Light}, Dark={StaticResource FitnessTrackerContentBackgroundAlt1Dark}}" AllowedState="HalfExpanded" HalfExpandedRatio="0.3" GrabberBackground="{AppThemeBinding Light={StaticResource FitnessTrackerBorderAlt1Light}, Dark={StaticResource FitnessTrackerBorderAlt1Dark}}" GrabberWidth="32" GrabberHeight="6">
                <bottomsheet:SfBottomSheet.Content>
                    <Grid RowDefinitions="56,*,136">
                        <HorizontalStackLayout Grid.Row="0" BackgroundColor="{AppThemeBinding Light={StaticResource FitnessTrackerContentBackgroundLight}, Dark={StaticResource FitnessTrackerContentBackgroundDark}}" Spacing="25" Padding="15,0,0,0">
                            <Border StrokeThickness="0" StrokeShape="RoundRectangle 15" WidthRequest="30" HeightRequest="30">
                                <effects:SfEffectsView>
                                    <effects:SfEffectsView.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Settings_CloseIcon_Tapped" />
                                    </effects:SfEffectsView.GestureRecognizers>
                                    <Label Text="&#xe755;" FontSize="24" FontFamily="MauiSampleFontIcon" VerticalOptions="Center" Style="{StaticResource IconStyle}"></Label>
                                </effects:SfEffectsView>
                            </Border>
                            <Label Text="Settings" FontSize="18" FontFamily="Roboto" FontAttributes="Bold" VerticalOptions="Center" Style="{StaticResource HeaderStyle}"></Label>
                        </HorizontalStackLayout>
                        <VerticalStackLayout Grid.Row="1"  Padding="10,0,10,0" >
                            <VerticalStackLayout Margin="0,0,0,12">
                                <HorizontalStackLayout Spacing="10" Padding="0,12,0,12">
                                    <Border StrokeThickness="0">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="20" />
                                        </Border.StrokeShape>
                                        <effects:SfEffectsView>
                                            <effects:SfEffectsView.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="Settings_ProfilePhoto_Tapped" />
                                            </effects:SfEffectsView.GestureRecognizers>
                                            <Image Source="alexuser.png" Aspect="AspectFit" WidthRequest="56" HeightRequest="56" />
                                        </effects:SfEffectsView>
                                    </Border>
                                    <VerticalStackLayout >
                                        <Label FontSize="18" FontFamily="Roboto" Style="{StaticResource HeaderStyle}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding FirstName}"/>
                                                    <Span Text=" "/>
                                                    <Span Text="{Binding LastName}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>

                                        <Label Text="{Binding Email}" FontSize="16" FontFamily="Roboto" Style="{StaticResource SubHeaderStyle}"></Label>
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                                <BoxView Color="#E5E1E3" HeightRequest="1.5" HorizontalOptions="FillAndExpand" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Spacing="20">
                                <effects:SfEffectsView>
                                    <effects:SfEffectsView.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Settings_Profile_Tapped" />
                                    </effects:SfEffectsView.GestureRecognizers>
                                    <HorizontalStackLayout Spacing="15" Padding="10">
                                        <Label Text="&#xe760;" FontSize="28" FontFamily="MauiSampleFontIcon" Style="{StaticResource IconStyle}" VerticalOptions="Center"></Label>
                                        <VerticalStackLayout>
                                            <Label Text="Profile" FontSize="18" FontFamily="Roboto" Style="{StaticResource HeaderStyle}" ></Label>
                                            <Label Text="Personal information" FontSize="16" FontFamily="Roboto" Style="{StaticResource SubHeaderStyle}"></Label>
                                        </VerticalStackLayout>
                                    </HorizontalStackLayout>
                                </effects:SfEffectsView>

                                <effects:SfEffectsView>
                                    <effects:SfEffectsView.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Settings_Notification_Tapped" />
                                    </effects:SfEffectsView.GestureRecognizers>
                                    <HorizontalStackLayout Spacing="15" Padding="10">
                                        <Label Text="&#xe75e;" FontSize="28" FontFamily="MauiSampleFontIcon" Style="{StaticResource IconStyle}" VerticalOptions="Center"></Label>
                                        <VerticalStackLayout>
                                            <Label Text="Notification" FontSize="18" FontFamily="Roboto" Style="{StaticResource HeaderStyle}" ></Label>
                                            <Label Text="Notification, Reminder" FontSize="16" FontFamily="Roboto" Style="{StaticResource SubHeaderStyle}"></Label>
                                        </VerticalStackLayout>
                                    </HorizontalStackLayout>
                                </effects:SfEffectsView>

                                <effects:SfEffectsView>
                                    <effects:SfEffectsView.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Settings_Appearance_Tapped" />
                                    </effects:SfEffectsView.GestureRecognizers>
                                    <HorizontalStackLayout Spacing="15" Padding="10">
                                        <Label Text="&#xe7fa;" FontSize="28" FontFamily="MauiSampleFontIcon" Style="{StaticResource IconStyle}" VerticalOptions="Center"/>
                                        <VerticalStackLayout>
                                            <Label Text="Appearance" FontSize="18" FontFamily="Roboto" Style="{StaticResource HeaderStyle}" ></Label>
                                            <Label Text="System Default" FontSize="16" FontFamily="Roboto" Style="{StaticResource SubHeaderStyle}"></Label>
                                        </VerticalStackLayout>
                                    </HorizontalStackLayout>
                                </effects:SfEffectsView>

                                <effects:SfEffectsView>
                                    <effects:SfEffectsView.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Settings_Account_Tapped" />
                                    </effects:SfEffectsView.GestureRecognizers>
                                    <HorizontalStackLayout Spacing="15" Padding="10">
                                        <Label Text="&#xe73b;" FontSize="28" FontFamily="MauiSampleFontIcon" Style="{StaticResource IconStyle}" VerticalOptions="Center"></Label>
                                        <VerticalStackLayout>
                                            <Label Text="Account" FontSize="18" FontFamily="Roboto" Style="{StaticResource HeaderStyle}" ></Label>
                                            <Label Text="Change email, password" FontSize="16" FontFamily="Roboto" Style="{StaticResource SubHeaderStyle}"></Label>
                                        </VerticalStackLayout>
                                    </HorizontalStackLayout>
                                </effects:SfEffectsView>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Row="2" Padding="10,0,0,0" Spacing="10">
                            <effects:SfEffectsView>
                                <effects:SfEffectsView.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Settings_Help_Tapped" />
                                </effects:SfEffectsView.GestureRecognizers>
                                <HorizontalStackLayout Spacing="15" Padding="10">
                                    <Label Text="&#xe71f;" FontSize="28" FontFamily="MauiSampleFontIcon" Style="{StaticResource IconStyle}" VerticalOptions="Center" ></Label>
                                    <VerticalStackLayout>
                                        <Label Text="Help" FontSize="18" FontFamily="Roboto" Style="{StaticResource HeaderStyle}" ></Label>
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </effects:SfEffectsView>

                            <effects:SfEffectsView>
                                <effects:SfEffectsView.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Settings_Logout_Tapped" />
                                </effects:SfEffectsView.GestureRecognizers>
                                <HorizontalStackLayout Spacing="10" Padding="10">
                                    <Label Text="&#xe7fb;" FontSize="28" FontFamily="MauiSampleFontIcon" Style="{StaticResource IconStyle}" VerticalOptions="Center"/>
                                    <VerticalStackLayout>
                                        <Label Text="Logout" FontSize="18" FontFamily="Roboto" Style="{StaticResource HeaderStyle}" ></Label>
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </effects:SfEffectsView>
                        </VerticalStackLayout>
                    </Grid>
                </bottomsheet:SfBottomSheet.Content>
                <bottomsheet:SfBottomSheet.BottomSheetContent>
                    <StackLayout>
                        <StackLayout x:Name="themecontent" Spacing="15" >
                            <Grid ColumnDefinitions="*,30" Padding="20,0,20,0">
                                <Label Text="Theme" FontSize="22"
                                    FontAttributes="Bold" Style="{StaticResource HeaderStyle}"/>
                                <effects:SfEffectsView Grid.Column="1">
                                    <effects:SfEffectsView.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Closebottomsheet_Tapped" />
                                    </effects:SfEffectsView.GestureRecognizers>
                                    <Label Text="&#xe755;" FontSize="28" FontFamily="MauiSampleFontIcon"  HorizontalTextAlignment="Center"/>
                                </effects:SfEffectsView>
                            </Grid>
                            <buttons:SfRadioGroup CheckedChanged="SfRadioGroup_CheckedChanged" Padding="10">
                                <buttons:SfRadioButton x:Name="lightTheme" Text="Light" FontSize="16" TextColor="{AppThemeBinding Light={StaticResource FitnessTrackerContentForegroundLight}, Dark={StaticResource FitnessTrackerContentForegroundDark}}"/>
                                <buttons:SfRadioButton x:Name="darkTheme" Text="Dark" FontSize="16" TextColor="{AppThemeBinding Light={StaticResource FitnessTrackerContentForegroundLight}, Dark={StaticResource FitnessTrackerContentForegroundDark}}"/>
                        </buttons:SfRadioGroup>
                    </StackLayout>

                        <VerticalStackLayout x:Name="logoutcontent" Padding="20,0,20,0" Spacing="30">
                            <Grid ColumnDefinitions="*,30" >
                                <Label Text="Logout"
                                   FontSize="22" FontAttributes="Bold" FontFamily="Roboto" Style="{StaticResource HeaderStyle}"/>
                                <effects:SfEffectsView Grid.Column="1">
                                    <effects:SfEffectsView.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Closebottomsheet_Tapped" />
                                    </effects:SfEffectsView.GestureRecognizers>
                                    <Label Text="&#xe755;" FontSize="28" FontFamily="MauiSampleFontIcon" Style="{StaticResource IconStyle}" HorizontalTextAlignment="Center"/>
                                </effects:SfEffectsView>
                            </Grid>


                            <Label Text="Are you sure, you want to logout ?"
                               FontSize="16" FontFamily="Roboto"
                               HorizontalOptions="Center" Style="{StaticResource HeaderStyle}"/>

                        <HorizontalStackLayout HorizontalOptions="End" Padding="0,20,0,0" Spacing="20">
                            <Button Text="Cancel"
                                    BackgroundColor="Transparent"
                                    BorderColor="{AppThemeBinding Light={StaticResource FitnessTrackerPrimaryBackgroundLight}, Dark={StaticResource FitnessTrackerPrimaryBackgroundDark}}"
                                    TextColor="{AppThemeBinding Light={StaticResource FitnessTrackerPrimaryBackgroundLight}, Dark={StaticResource FitnessTrackerPrimaryBackgroundDark}}"
                                    FontFamily="Roboto"
                                    FontAttributes="Bold"
                                    BorderWidth="1"
                                    CornerRadius="20"
                                    WidthRequest="93"
                                    Clicked="CloseBottomSheet"/>

                            <Button Text="Logout"
                                    BackgroundColor="#C20D32"
                                    TextColor="{AppThemeBinding Light={StaticResource FitnessTrackerPrimaryForegroundLight}, Dark={StaticResource FitnessTrackerPrimaryForegroundDark}}"
                                    FontFamily="Roboto"
                                    FontAttributes="Bold"
                                    CornerRadius="20"
                                    WidthRequest="93"
                                    Clicked="LogoutAction"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                    </StackLayout>
                </bottomsheet:SfBottomSheet.BottomSheetContent>

            </bottomsheet:SfBottomSheet>
        </Grid>

        <!--Account Editing page-->
        <Grid x:Name="AccountEditingGrid" IsVisible="false" Background="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource FitnessTrackerContentBackgroundDark}}" TranslationX="-390">
            <bottomsheet:SfBottomSheet x:Name="accounteditingbottomsheet" CornerRadius="16, 16, 0, 0" ContentWidthMode="{OnIdiom Phone=Full, Desktop=Custom}" BottomSheetContentWidth="400" ShowGrabber="True" GrabberHeight="6" GrabberWidth="32" Background="{AppThemeBinding Light={StaticResource FitnessTrackerContentBackgroundAlt1Light}, Dark={StaticResource FitnessTrackerContentBackgroundAlt1Dark}}" GrabberBackground="{AppThemeBinding Light={StaticResource FitnessTrackerBorderAlt1Light}, Dark={StaticResource FitnessTrackerBorderAlt1Dark}}" AllowedState="HalfExpanded" HalfExpandedRatio="0.4">
                <bottomsheet:SfBottomSheet.Content>
                    <Grid RowDefinitions="56,*,136" RowSpacing="20">
                        <Border StrokeThickness="0">
                            <HorizontalStackLayout Spacing="25" Padding="16,0,0,0" Background="{AppThemeBinding Light={StaticResource FitnessTrackerContentBackgroundAlt1Light}, Dark={StaticResource FitnessTrackerContentBackgroundAlt1Dark}}">
                                <Border StrokeThickness="0" StrokeShape="RoundRectangle 15" WidthRequest="30" HeightRequest="30">
                                    <effects:SfEffectsView>
                                        <effects:SfEffectsView.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="BackButton_Tapped" />
                                        </effects:SfEffectsView.GestureRecognizers>
                                        <Label Text="&#xe70e;" FontSize="24" FontFamily="MauiSampleFontIcon" VerticalOptions="Center" Style="{StaticResource IconStyle}"></Label>
                                    </effects:SfEffectsView>
                                </Border>
                                <Label Text="Account" FontSize="18" FontFamily="Roboto" FontAttributes="Bold" VerticalOptions="Center" Style="{StaticResource HeaderStyle}"></Label>
                            </HorizontalStackLayout>
                        </Border>
                        <VerticalStackLayout Grid.Row="1"  Padding="16,0,0,0" >
                            <VerticalStackLayout Spacing="32">
                                <effects:SfEffectsView>
                                    <effects:SfEffectsView.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ChangeEmail_Tapped" />
                                    </effects:SfEffectsView.GestureRecognizers>
                                    <Grid ColumnDefinitions="40,*,40" >
                                        <Label Text="&#xe75c;" FontSize="28" FontFamily="MauiSampleFontIcon" Style="{StaticResource IconStyle}" VerticalOptions="Center" FontAttributes="Bold"></Label>
                                        <Label Text="Change Email" Grid.Column="1" FontSize="18" FontFamily="Roboto" VerticalOptions="Center" Style="{StaticResource HeaderStyle}" ></Label>
                                        <Label Text="&#xe701;" FontSize="28" Grid.Column="2" FontFamily="MauiSampleFontIcon" Style="{StaticResource IconStyle}" VerticalOptions="Center" FontAttributes="Bold"></Label>
                                    </Grid>
                                </effects:SfEffectsView>

                                <effects:SfEffectsView>
                                    <effects:SfEffectsView.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ChangePassword_Tapped" />
                                    </effects:SfEffectsView.GestureRecognizers>
                                    <Grid ColumnDefinitions="40,*,40" >
                                        <Label Text="&#xe751;" FontSize="28" FontFamily="MauiSampleFontIcon" Style="{StaticResource IconStyle}" VerticalOptions="Center" FontAttributes="Bold"></Label>
                                        <Label Text="Change Password" Grid.Column="1" FontSize="18" FontFamily="Roboto" Style="{StaticResource HeaderStyle}" VerticalOptions="Center"></Label>
                                        <Label Text="&#xe701;" FontSize="28" Grid.Column="2" FontFamily="MauiSampleFontIcon" Style="{StaticResource IconStyle}" VerticalOptions="Center" FontAttributes="Bold"></Label>
                                    </Grid>
                                </effects:SfEffectsView>


                                <effects:SfEffectsView>
                                    <effects:SfEffectsView.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="DeleteAccount_Tapped" />
                                    </effects:SfEffectsView.GestureRecognizers>
                                    <Grid ColumnDefinitions="40,*,40">
                                        <Label Text="&#xe73c;" FontSize="28" FontFamily="MauiSampleFontIcon" TextColor="#C20D32" VerticalOptions="Center" FontAttributes="Bold"></Label>
                                        <Label Text="Delete Account" Grid.Column="1" TextColor="#C20D32" FontSize="18" FontFamily="Roboto" VerticalOptions="Center"></Label>
                                        <Label Text="&#xe701;" FontSize="28" Grid.Column="2" FontFamily="MauiSampleFontIcon" Style="{StaticResource IconStyle}" VerticalOptions="Center" FontAttributes="Bold"></Label>
                                    </Grid>
                                </effects:SfEffectsView>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Grid>
                </bottomsheet:SfBottomSheet.Content>
                <bottomsheet:SfBottomSheet.BottomSheetContent>
                    <StackLayout>
                        <StackLayout x:Name="ChangeEmailContent" IsVisible="False" Spacing="15" Padding="20,0,20,0">
                            <Grid ColumnDefinitions="*,30">
                                <Label Text="Change Email"
                       FontSize="22"
                       FontAttributes="Bold" FontFamily="Roboto" Style="{StaticResource HeaderStyle}"/>
                                <effects:SfEffectsView Grid.Column="1">
                                    <effects:SfEffectsView.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ClosebottomsheetContent_Tapped" />
