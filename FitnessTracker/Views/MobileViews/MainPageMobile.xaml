                                </effects:SfEffectsView>
                            </Grid>
                            <VerticalStackLayout>
                                <input:SfTextInputLayout x:Name="passwordinput" ContainerType="Outlined" HeightRequest="70" ContainerBackground="Transparent" IsHintAlwaysFloated="True" InputViewPadding="{OnPlatform Android='15, 15, 0, 0'}" Stroke="#C9C6C8" OutlineCornerRadius="8">
